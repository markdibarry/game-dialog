{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "extensionHost",
            "preLaunchTask": "buildDebug",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
            ],
        },
        {
            "name": "Launch Release",
            "type": "extensionHost",
            "preLaunchTask": "build",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
            ],
        }
    ]
}