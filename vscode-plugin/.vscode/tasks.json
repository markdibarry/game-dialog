{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOn": [
                "build-extension",
                "build-server"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "build-extension",
            "command": "npm",
            "args": [ "run", "buildExtension"],
            "type": "shell",
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "build-server",
            "command": "npm",
            "args": [ "run", "buildServer"],
            "type": "shell",
            "problemMatcher": "$msCompile"
        }
    ]
}