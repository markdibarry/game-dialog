{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "gamedialog",
    "fileTypes": [
        "dia"
    ],
    "scopeName": "source.gamedialog",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#title"
        },
        {
            "include": "#speaker"
        },
        {
            "include": "#tags"
        },
        {
            "include": "#controls"
        },
        {
            "include": "#choices"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash",
                    "match": "//.*"
                }
            ]
        },
        "title": {
            "name": "support.function",
            "match": "^\\s*--\\s*\\w+\\s*--\\s*"
        },
        "speaker": {
            "name": "markup.bold",
            "match": "^\\s*(\\w+(?:\\s*,\\s*\\w+)*)\\s*:\\s*"
        },
        "choices": {
            "name": "keyword.control",
            "match": "^\\s*\\?\\s+(?:if\\s+)?"
        },
        "tags": {
            "name": "keyword.other",
            "begin": "(?<!\\\\)\\[",
            "end": "(?<!\\\\)\\]",
            "patterns": [
                {
                    "include": "#functions"
                },
                {
                    "include": "#variables"
                },
                {
                    "include": "#numerics"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#keywords"
                }
            ]
        },
        "variables": {
            "name": "support.type.property-name",
            "match": "[A-Za-z][A-Za-z0-9_]*"
        },
        "keywords": {
            "name": "keyword.other",
            "match": "true|false|@bool|@string|@float"
        },
        "controls": {
            "patterns": [
                {
                "name": "keyword.control",
                "match": "^(?:[ \\t]*)\\belse\\s+if\\b(?=\\s*\\[)"
                },
                {
                "name": "keyword.control",
                "match": "^(?:[ \\t]*)\\bif\\b(?=\\s*\\[)"
                },
                {
                "name": "keyword.control",
                "match": "^(?:[ \\t]*)\\belse\\b[ \\t]*$"
                }
            ]
        },
        "functions": {
            "match": "(\\w+)(\\()(.*?)(\\))",
            "captures": {
                "1": {
                    "name": "keyword.other.unit"
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#functions"
                        },
                        {
                            "include": "#variables"
                        },
                        {
                            "include": "#numerics"
                        },
                        {
                            "include": "#strings"
                        },
                        {
                            "include": "#keywords"
                        }
                    ]
                }
            }
        },
        "strings": {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "numerics": {
            "name": "constant.numeric",
            "match": "\\b([+-]?([0-9]*[.])?[0-9]+)\\b"
        }
    }
}
